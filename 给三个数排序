#include <stdio.h>
int main()
{
	float a, b, c,temp;
	printf("键盘录入三个数：\n");
	scanf("%f %f %f", &a, &b, &c);
	if (a > b)
	{
		temp = a;
		a = b;
		b = temp;
	 if (a > c)
	 {
		temp = a;
		a = c;
		c = temp;
	 if(b>c)
	  {
		 temp = b;
		 b = c;
		 c = temp;
	  }
	 }
	}
	printf("从小到大排序后的三个数的顺序为：%.1f, %.1f, %.1f", a, b, c);
	return 0;
}
